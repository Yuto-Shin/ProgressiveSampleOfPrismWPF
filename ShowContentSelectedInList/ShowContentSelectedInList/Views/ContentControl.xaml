<UserControl x:Class="ShowContentSelectedInList.Views.ContentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <StackPanel>
        <TextBlock>Name</TextBlock>
        <TextBox Text="{Binding Person.Name,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock>Sex</TextBlock>
        <TextBox Text="{Binding Person.Sex,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock>Age</TextBlock>
        <TextBox Text="{Binding Person.Age,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
    </StackPanel>
</UserControl>

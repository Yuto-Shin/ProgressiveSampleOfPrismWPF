<Window x:Class="ShowContentSelectedInList.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="ShowContentSelectedInList" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ContentControl Grid.Column="0" prism:RegionManager.RegionName="ListRegion" />
        <GridSplitter Grid.Column="1" Width="3" HorizontalAlignment="Stretch"/>
        <ContentControl Grid.Column="2" prism:RegionManager.RegionName="ContentRegion"/>
    </Grid>
</Window>
